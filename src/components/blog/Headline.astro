---
const { title = await Astro.slots.render('default'), subtitle = await Astro.slots.render('subtitle') } = Astro.props;
---

<header class="mb-12 md:mb-20 text-center max-w-4xl mx-auto">
  <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tighter tracking-tighter font-heading bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 dark:from-white dark:via-gray-100 dark:to-gray-300 bg-clip-text text-transparent" set:html={title} />
  {
    subtitle && (
      <div class="mt-6 md:mt-8 mx-auto text-lg md:text-xl text-gray-600 dark:text-slate-300 font-medium leading-relaxed max-w-3xl" set:html={subtitle} />
    )
  }
  <div class="mt-8 w-24 h-1 bg-gradient-to-r from-primary to-blue-600 mx-auto rounded-full"></div>
</header>
