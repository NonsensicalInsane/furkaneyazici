---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Image from '~/components/common/Image.astro';
import myImage from '~/assets/images/me.png';
import aboutData from '~/data/about/index';

const metadata = {
  title: 'Who am I?',
};

const { personal, research, work, education, certifications, socialLinks } = aboutData;
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Fragment slot="header">
    <Header
      links={[
        {
          text: 'Home',
          href: '/',
        },
        {
          text: 'About',
          links: [
            {
              text: 'Research',
              href: '#research-experience',
            },
            {
              text: 'Work',
              href: '#work-experience',
            },
            {
              text: 'Education',
              href: '#education',
            },
            {
              text: 'Certifications',
              href: '#certifications',
            },
          ],
        },
        {
          text: 'Projects',
          href: '/projects',
        },
        {
          text: 'Blog',
          href: 'https://blog.furkaneyazici.com',
        },
      ]}
      actions={[
        {
          text: 'Contact me!',
          href: '/#contact',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
  
  <!-- Enhanced Hero Section with Animated Background -->
  <section class="relative md:-mt-[76px] not-prose">
    <!-- Pure black background -->
    <div class="absolute inset-0 bg-[#000000]"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
      <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
      <div class="py-16 md:py-24">
        <div class="text-center pb-12 md:pb-20 max-w-5xl mx-auto">
          <div class="space-y-6">
            <h1 class="text-5xl md:text-7xl font-bold leading-tighter tracking-tighter font-heading">
              {personal.subtitle} <span class="text-gradient-blue relative">
                {personal.name}!
                <span class="absolute -bottom-2 left-0 right-0 h-3 bg-gradient-to-r from-blue-400/30 to-purple-400/30 rounded-full blur-sm"></span>
              </span>
            </h1>
            <p class="text-xl md:text-2xl text-muted dark:text-slate-300 max-w-3xl mx-auto">
              {personal.title}
            </p>
            <div class="flex flex-wrap justify-center gap-4 pt-6">
              {personal.expertise.map((skill) => (
                <span class="px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 text-sm font-medium">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced About Section -->
  <section class="relative py-16 md:py-24" id="about">
    <div class="absolute inset-0 bg-[#000000]"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Content Side -->
        <div class="space-y-8">
          <div class="space-y-4">
            <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-gradient mb-6">About me</h2>
            {personal.description.map((paragraph) => (
              <p class="text-lg leading-relaxed dark:text-slate-300 text-balance" set:html={paragraph.replace(/interdisciplinary researcher/g, '<strong class="text-gradient-blue">interdisciplinary researcher</strong>').replace(/computational physicist/g, '<strong class="text-gradient-blue">computational physicist</strong>').replace(/deep learning/g, '<strong class="text-gradient-blue">deep learning</strong>').replace(/quantum computing/g, '<strong class="text-gradient-blue">quantum computing</strong>')} />
            ))}
          </div>

          <!-- Social Links with Enhanced Design -->
          <div class="grid grid-cols-2 gap-4">
            {socialLinks.map((link) => (
              <a 
                href={link.url} 
                target="_blank"
                class="modern-card hover-lift p-6 text-center group transition-all duration-300"
              >
                <div class="text-4xl mb-3 group-hover:scale-110 transition-transform duration-300">
                  {link.icon}
                </div>
                <span class="font-medium text-gray-700 dark:text-gray-300 group-hover:text-blue-600 dark:group-hover:text-blue-400">{link.name}</span>
              </a>
            ))}
          </div>

          <!-- CTA Button -->
          <div class="pt-4">
            <a 
              href={personal.resumeUrl} 
              target="_blank"
              class="btn-primary inline-flex items-center space-x-2 text-lg px-8 py-4 group"
            >
              <span>ðŸ“„ Download my resume!</span>
              <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Image Side -->
        <div class="relative lg:order-last">
          <div class="relative">
            <!-- Background decoration -->
            <div class="absolute inset-0 bg-gradient-to-tr from-blue-400/20 to-purple-400/20 rounded-3xl transform rotate-3"></div>
            <div class="absolute inset-0 bg-gradient-to-bl from-indigo-400/20 to-cyan-400/20 rounded-3xl transform -rotate-3"></div>
            
            <!-- Main image -->
            <div class="relative bg-white dark:bg-slate-800 rounded-3xl p-2 shadow-2xl">
              <Image 
                src={myImage}
                alt="Furkan EÅŸref YazÄ±cÄ±" 
                class="w-full rounded-2xl image-glow"
                loading="eager"
                width={400}
                height={400}
              />
            </div>
            
            <!-- Floating stats -->
            <div class="absolute -top-6 -right-6 bg-white dark:bg-slate-800 rounded-2xl p-4 text-center animate-bounce shadow-xl border border-gray-200 dark:border-slate-700">
              <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{personal.stats.yearsResearch}</div>
              <div class="text-sm font-medium text-gray-700 dark:text-gray-300">Years Research</div>
            </div>
            <div class="absolute -bottom-6 -left-6 bg-white dark:bg-slate-800 rounded-2xl p-4 text-center animate-bounce delay-75 shadow-xl border border-gray-200 dark:border-slate-700">
              <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{personal.stats.projects}</div>
              <div class="text-sm font-medium text-gray-700 dark:text-gray-300">Projects</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Research Experience Section -->
  <section class="relative py-16 md:py-24" id="research-experience">
    <div class="absolute inset-0 bg-slate-50/50 dark:bg-slate-900/30"></div>
    
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gradient mb-4">Research Experience</h2>
        <p class="text-xl text-muted dark:text-slate-400 max-w-2xl mx-auto">
          Exploring the frontiers of physics, quantum computing, and machine learning
        </p>
      </div>

      <div class="space-y-8">
        {research.map((item) => (
          <div class="modern-card hover-lift p-8 transition-all duration-300">
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class={`w-16 h-16 rounded-full bg-gradient-to-r ${item.color} flex items-center justify-center text-white text-2xl`}>
                  {item.icon}
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gradient-blue mb-2">
                  {item.title}
                </h3>
                <p class="font-medium text-gray-700 dark:text-gray-300 mb-1">
                  {item.organization} - {item.location}
                </p>
                <p class="text-sm text-muted mb-4">{item.startDate} - {item.endDate}</p>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  {item.description}
                </p>
                {item.supervisor && (
                  <p class="text-sm text-blue-600 dark:text-blue-400 mt-2">
                    <strong>Supervisor:</strong> {item.supervisorUrl ? (
                      <a href={item.supervisorUrl} target="_blank" class="hover:underline">{item.supervisor}</a>
                    ) : item.supervisor}
                  </p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Enhanced Work Experience Section -->
  <section class="relative py-16 md:py-24" id="work-experience">
    <div class="absolute inset-0 bg-blue-50/50 dark:bg-blue-900/30"></div>
    
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gradient mb-4">Work Experience</h2>
        <p class="text-xl text-muted dark:text-slate-400 max-w-2xl mx-auto">
          Professional journey in quantum computing and technology
        </p>
      </div>

      <div class="space-y-8">
        {work.map((item) => (
          <div class="modern-card hover-lift p-8 transition-all duration-300">
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class={`w-16 h-16 rounded-full bg-gradient-to-r ${item.color} flex items-center justify-center text-white text-2xl`}>
                  {item.icon}
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gradient-blue mb-2">
                  {item.title}
                </h3>
                <p class="font-medium text-gray-700 dark:text-gray-300 mb-1">
                  {item.companyUrl ? (
                    <a href={item.companyUrl} target="_blank" class="hover:text-blue-600 dark:hover:text-blue-400">
                      {item.company}{item.location && ` - ${item.location}`}
                    </a>
                  ) : (
                    `${item.company}${item.location ? ` - ${item.location}` : ''}`
                  )}
                </p>
                <p class="text-sm text-muted mb-4">{item.startDate} - {item.endDate}</p>
                {item.description.length > 0 && (
                  <div class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    {item.description.map((desc) => (
                      <p class="mb-1">â€¢ {desc}</p>
                    ))}
                    {item.projectUrl && (
                      <p class="mt-2">
                        The website is: <a href={item.projectUrl} target="_blank" class="text-red-600 dark:text-red-400 hover:underline">qmap.qworld.net</a>
                      </p>
                    )}
                  </div>
                )}
                {item.supervisor && (
                  <p class="text-sm text-blue-600 dark:text-blue-400 mt-2">
                    <strong>Supervisor:</strong> {item.supervisorUrl ? (
                      <a href={item.supervisorUrl} target="_blank" class="hover:underline">{item.supervisor}</a>
                    ) : item.supervisor}
                  </p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Enhanced Education Section -->
  <section class="relative py-16 md:py-24" id="education">
    <div class="absolute inset-0 bg-slate-50/50 dark:bg-slate-900/30"></div>
    
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gradient mb-4">Education</h2>
        <p class="text-xl text-muted dark:text-slate-400 max-w-2xl mx-auto">
          Academic foundation in physics and computational sciences
        </p>
      </div>

      <div class="space-y-8">
        {education.map((item) => (
          <div class="modern-card hover-lift p-8 transition-all duration-300">
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class={`w-16 h-16 rounded-full bg-gradient-to-r ${item.color} flex items-center justify-center text-white text-2xl`}>
                  {item.icon}
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gradient-blue mb-2">
                  {item.degree}
                </h3>
                <p class="font-medium text-gray-700 dark:text-gray-300 mb-1">
                  {item.institution}
                </p>
                <p class="text-sm text-muted mb-4">{item.startDate} - {item.endDate}</p>
                {item.courses && (
                  <div class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    <p class="mb-2 font-medium">Concentration and extra courses:</p>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm">
                      {item.courses.map((course) => (
                        <span class="flex items-center"><span class="text-blue-500 mr-2">â€¢</span>{course}</span>
                      ))}
                    </div>
                  </div>
                )}
                {item.description && (
                  <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{item.description}</p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Enhanced Certifications Section -->
  <section class="relative py-16 md:py-24" id="certifications">
    <div class="absolute inset-0 bg-blue-50/50 dark:bg-blue-900/30"></div>
    
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gradient mb-4">Certifications</h2>
        <p class="text-xl text-muted dark:text-slate-400 max-w-2xl mx-auto">
          Professional development in data science, machine learning, and quantum computing
        </p>
      </div>

      <div class="space-y-8">
        {certifications.map((item) => (
          <div class="modern-card hover-lift p-8 transition-all duration-300">
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class={`w-16 h-16 rounded-full bg-gradient-to-r ${item.color} flex items-center justify-center text-white text-2xl`}>
                  {item.icon}
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gradient-blue mb-2">
                  {item.certificateUrl ? (
                    <a href={item.certificateUrl} target="_blank" class="hover:underline">
                      {item.title}
                    </a>
                  ) : item.title}
                </h3>
                <p class="font-medium text-gray-700 dark:text-gray-300 mb-1">{item.provider}</p>
                {item.date && (
                  <p class="text-sm text-muted mb-4">{item.date}</p>
                )}
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-3">
                  {item.description}
                </p>
                {item.capstoneProject && (
                  <p class="text-gray-700 dark:text-gray-300">
                    <strong>Capstone Project:</strong> 
                    <a href={item.capstoneProject.url} target="_blank" class="text-red-600 dark:text-red-400 hover:underline ml-1">
                      {item.capstoneProject.name}
                    </a>
                  </p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Custom animations for enhanced UX */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .delay-300 {
    animation-delay: 300ms;
  }

  .delay-500 {
    animation-delay: 500ms;
  }

  /* Enhanced button hover effects */
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.3);
  }

  /* Floating animation for stats */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* Enhanced card hover effects */
  .modern-card:hover {
    transform: translateY(-4px) scale(1.02);
  }

  /* Smooth image hover effects */
  .image-glow:hover {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }
</style>