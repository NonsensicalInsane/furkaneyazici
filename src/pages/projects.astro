---
import Layout from '../layouts/PageLayout.astro';
import Header from '../components/widgets/Header.astro';
import Hero from '../components/widgets/Hero.astro';
import Features2 from '../components/widgets/Features2.astro';
import Features3 from '../components/widgets/Features3.astro';

// Import organized project data
import { featuredProjects } from '../data/projects/featured';
import { upcomingProjects, upcomingProjectsConfig } from '../data/projects/upcoming';

const metadata = {
  title: "Furkan's Projects",
};
---

<Layout {...metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '/' },
        { text: 'About', href: '/about' },
        { text: 'Projects', href: '#' },
        { text: 'Blog', href: '/blog' },
      ]}
      actions={[
        {
          text: 'Contact me!',
          href: '/#contact',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
  <Hero
    title="<span class='text-gradient'>Projects</span>"
    subtitle="Here are some of the projects I have worked on. I am always looking for new projects to work on, so if you have an idea, feel free to contact me!"
    callPageName="Contact"
    callPagePath="/#contact"
  />

  <Features2
    title="<span class='text-gradient'>Featured Projects</span>"
    subtitle="Explore my latest work and contributions"
    items={featuredProjects}
    columns={3}
  />

  <Features3
    title={upcomingProjectsConfig.title}
    subtitle={upcomingProjectsConfig.subtitle}
    image={upcomingProjectsConfig.heroImage}
    items={upcomingProjects}
    columns={2}
  />
</Layout>
